<h1>Listing cats</h1>

<table>
  <tr>
    <th>PIC </th>
    <th>Name</th>
    <th>Image </th>
    <th>Path</th>
    <th></th>
    <th></th>
  </tr>

<% @cats.reverse_each do |cat| %>
  <tr>
    <td><img src="<%= cat.img %>" height="50" width="50" /></td>
    <td><%= cat.name %></td>
    <td><%= cat.img %></td>
    <td><%= link_to 'Show', cat %></td>
    <td><%= link_to 'Edit', edit_cat_path(cat) %></td>
    <td><%= link_to 'Destroy', cat, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Cat', new_cat_path %>
